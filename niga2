def rub(t11, t34, t35):
    t22.append(t11)
    er = len(t22)
    for i in range(er):
        sex = t22[i]
        t34 = t34 + str(sex)
    lable.setText(t34)
    lable.setStyleSheet("color:gray;font-size:32px;")
    t35.append(t11)


