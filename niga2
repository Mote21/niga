def rub0(t10, t34, t22, t35):
    sex = len(t22)
    if sex != 0:
        sex2 = t22[0]
        if sex2 != "-":
            t22.append(t10)
            er = len(t22)
            for i in range(er):
                sex = t22[i]
                t34 = t34 + str(sex)
            lable.setText(t34)
            lable.setStyleSheet("color:gray;font-size:32px;")
            t35.append(t10)

def rubq(t1q, t34, t1w, t22, t35, t23, re):
    sex0 = re[0]
    sex11 = len(t35)
    sex12 = ""
    for i in range(sex11):
        sex13 = t35[i]
        sex12 = sex12 + sex13
    if sex0 == "2":
        sex12 = "-" + sex12
    re.clear()
    re.append('2')
    t35.clear()
    t23.append(sex12)
    t24 = len(t22)
    t22.reverse()
    if t24 != 0:
        t44 = t22[0]
        if t44 != t1w and t44 != t1q:
            t22.reverse()
            t22.append(t1q)
            er = len(t22)
            for i in range(er):
                sex = t22[i]
                t34 = t34 + str(sex)
            lable.setText(t34)
            lable.setStyleSheet("color:gray;font-size:32px;")
        else:
            t22.reverse()
    else:
        t22.append(t1q)
        lable.setText(t1q)
        lable.setStyleSheet("color:gray;font-size:32px;")



def rubw(t1w, t34, t1q, t22, re):
    sex11 = len(t35)
    sex12 = ""
    sex0 = re[0]
    for i in range(sex11):
        sex13 = t35[i]
        sex12 = sex12 + sex13
    if sex0 == "2":
        sex12 = "-" + sex12
    re.clear()
    re.append('1')
    t35.clear()
    t23.append(sex12)
    t24 = len(t22)
    t22.reverse()
    if t24 != 0:
        t44 = t22[0]
        if t44 != t1w and t44 != t1q:
            t22.reverse()
            t22.append(t1w)
            er = len(t22)
            for i in range(er):
                sex = t22[i]
                t34 = t34 + str(sex)
            lable.setText(t34)
            lable.setStyleSheet("color:gray;font-size:32px;")
        else:
            t22.reverse()
    


def rube(t34, t22, t23, t35, re):
    sex11 = len(t35)
    sex12 = ""
    sex0 = re[0]
    for i in range(sex11):
        sex13 = t35[i]
        sex12 = sex12 + sex13
    if sex0 == "2":
        sex12 = "-" + sex12
    re.clear()
    re.append('1')
    t35.clear()
    t23.append(sex12)
    t22.clear()
    t45 = 0
    er = len(t23)  
    for i in range(er):
        sex = t23[i]
        if sex == "":
            sex = "0"
        t45 = t45 + int(sex)
    t23.clear()
    t34 = str(t45)
    t35.append(t34)
    t22.append(t34)
    lable.setText(str(t34))
    lable.setStyleSheet("color:gray;font-size:32px;")



    


def rubr(t34, t35):
    sex = len(t22)
    sex2 = len(t35)
    if sex != 0:
        t22.pop()
        er = len(t22)
        for i in range(er):
            sex = t22[i]
            t34 = t34 + str(sex)
        lable.setText(t34)
        lable.setStyleSheet("color:gray;font-size:32px;")
    if sex2 != 0:
        t35.pop()


def rubt(t22, t35):
    t22.clear()
    t35.clear()
    lable.setText("")
    lable.setStyleSheet("color:gray;font-size:32px;")

